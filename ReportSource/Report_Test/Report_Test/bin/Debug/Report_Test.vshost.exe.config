  </connectionStrings>
  <dataConfiguration defaultDatabase="ASOFT_ERPNET" />
  <startup useLegacyV2RuntimeActivationPolicy="true">
    <supportedRuntime version="v2.0.50727" sku="Client"/>
  </startup>
</configuration>
